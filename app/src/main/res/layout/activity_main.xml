<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalkulator Bidang Datar"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Panjang/Alas/Diameter"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editPnjg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Inputkan Panjan/Alas/Diameter"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lebar/Tinggi"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editLbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Inputkan Lebar/Tinggi"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonPrsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="hitungPersegi"
        android:text="Bidang Persegi" />

    <Button
        android:id="@+id/buttonSgtg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="hitungSegitiga"
        android:text="Bidang Segitiga" />

    <Button
        android:id="@+id/buttonLngkrn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="hitungLingkaran"
        android:text="Bidang Lingkaran" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textLs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textKllng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

</LinearLayout>